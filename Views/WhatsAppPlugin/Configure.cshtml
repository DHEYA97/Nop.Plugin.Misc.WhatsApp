@using Nop.Plugin.Misc.WhatsApp
@model ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}
@await Component.InvokeAsync("StoreScopeConfiguration")
<form asp-controller="WhatsAppPlugin" asp-action="Configure" method="post">
    <section class="content">
        <div class="container-fluid">
            <div class="cards-group">
                <div class="card card-default">
                    <div class="card-header">
                        @T("Plugins.WhatsApp.Confugration")
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="InstanceId_OverrideForStore" asp-input="InstanceId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="InstanceId" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="InstanceId" />
                                <span asp-validation-for="InstanceId"></span>
                            </div>
                        </div>




                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="Token_OverrideForStore" asp-input="Token" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="Token" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Token" />
                                <span asp-validation-for="Token"></span>
                            </div>
                        </div>
                            <div class="form-group row">
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>